{% extends 'base.html.twig' %}

{% block title %} Titre de l'article {% endblock %}

{% block body %}

    <article>
        <h2> {{ article.title }} </h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie Europe</div>
        <div class="content">
            <img src="{{ article.image }}" alt=""> <br>
            {{ article.content | raw }}
        </div>
    </article>

{% endblock %}